@model IEnumerable<CategoryDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Kategory Index Page</h1>

<a class="btn btn-primary mb-3" asp-action="Create">Kategori Ekle</a>
<table class="table table-bordered">
    <thead>
    <th>Id</th>
    <th>Name</th>
    <th>İşlemler</th>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a class="" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                <a class="" asp-action="Delete" asp-route-id="@item.Id" >Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>